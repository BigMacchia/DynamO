if [ $(whereis -b povray | wc -w) -lt 2 ]; then 
    echo 'No geomview installed!' 
    exit 
fi

if [ -z $1 ]; then
    echo 'No input file specified!'
    exit    
fi

if [ ! -e $1 ]; then
    echo 'Could not find the input file!'
    exit
fi

oldPWD=$(pwd)
cd /tmp
echo $oldPWD/$1
dynarun $oldPWD/$1 -c 0 -E -L Povray
cd $oldPWD
povray +P -W1024 -H768 /tmp/Povray.frame1.pov
