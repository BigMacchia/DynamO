if [ $(whereis -b vmd | gawk '{ if (NF > 1) print 1; else print 0}') == 0 ]; then 
    echo 'No vmd installed!' 
    exit 
fi

if [ -z $1 ]; then
    echo 'No input file specified!'
    exit    
fi

if [ ! -e "$1" ]; then
    echo 'Could not find the input file!'
    exit
fi

oldPWD=$(pwd)
cd /tmp
echo $oldPWD/$1
is_mdrun $oldPWD/$1 -c 0 -E -L TinkerXYZ
cd $oldPWD
vmd -f /tmp/tinker.frame00000.xyz /tmp/tinker.frame00000.r3d
