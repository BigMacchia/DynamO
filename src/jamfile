#Just some basic, no dependency libraries
lib gslcblas bz2 z ;

lib boost_system
    : 
    : <name>boost_system-mt-s
    ;

lib boost_program_options
    : 
    : <name>boost_program_options-mt-s
    ;

lib pthread
    : : <link>shared <name>pthread
    ;   

#Libraries whoes dependencies are specified
lib gsl	
    : gslcblas 
    : <name>gsl
    ;

lib boost_iostreams
    : bz2 z 
    : <name>boost_iostreams-mt-s
    ;

lib boost_filesystem	   
    : boost_system
    : <name>boost_filesystem-mt-s  
    ;

lib boost_thread           
    : pthread
    : <name>boost_thread-mt-s
    ;

#Only required if <define>DYNAMO_VTK and I don't use it anymore
#lib vtkIO  		   : : <link>shared <name>vtkIO ;
#Include vtkIO in dynamo_core too

lib dynamo_core : [ glob-tree *.cpp : dataproc ] 
    boost_iostreams  boost_thread boost_filesystem boost_program_options 
    gsl
    :
    ;
