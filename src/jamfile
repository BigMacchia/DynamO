    <variant>debug:<define>DYNAMO_DEBUG
    ;

lib dynamo_core : [ glob-tree *.cpp : dataproc ]
    ../boost//iostreams  ../boost//thread ../boost//filesystem 
    ../boost//program_options gsl
    #vtkIO
    : <threading>multi <include>extcode/include <define>DYNAMO_threading 
    <variant>debug:<define>DYNAMO_DEBUG
    <variant>cachegrind:<define>DYNAMO_Cachegrind
    : :  <include>extcode/include <define>DYNAMO_threading 
    <variant>debug:<define>DYNAMO_DEBUG
