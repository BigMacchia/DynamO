#lib vtkIO  		   
#    : : <file>/usr/lib/libvtkIO.so 
#    : : <link>shared <define>DYNAMO_VTK <include>/usr/include/vtk-5.2/ ;

alias dynamo_core : [ glob-tree *.cpp  ]
    ../boost//iostreams
    ../boost//thread/<threadapi>pthread
    ../boost//filesystem
    ../boost//program_options
    gsl
    #vtkIO
    : <include>extcode/include 
    <variant>debug:<define>DYNAMO_DEBUG <threading>multi <link>static <condor>no
    : : <include>extcode/include 
    <variant>debug:<define>DYNAMO_DEBUG <threading>multi <link>static <condor>no
    ;

alias dynamo_core : [ glob-tree *.cpp ]
    ../boost//filesystem/<threading>single
    ../boost//program_options/<threading>single
    gsl
    #vtkIO
    : <include>extcode/include 
    <variant>debug:<define>DYNAMO_DEBUG <threading>single <link>static <condor>yes
    : : <include>extcode/include 
    <variant>debug:<define>DYNAMO_DEBUG <threading>single <link>static <condor>yes
    ;
