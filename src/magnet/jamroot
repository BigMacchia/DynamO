#lib magnet : OpenCL [ glob-tree *.cpp : tests ]
alias magnet : OpenCL 
      : <include>.
      : 
      : <include>. ;


##################### TESTS ######################
using testing ;

#####################OPENCL
#### Prefix Scan ####
unit-test scan_test : tests/scan_test.cpp magnet ;

#### Radix Sort ####
unit-test radixsort_test : tests/radixsort_test.cpp magnet ;

#### Bitonic Sort ####
unit-test bitonicsort_test : tests/bitonicsort_test.cpp magnet ;

#### Heap Sort ####
unit-test heapsort_test : tests/heapsort_test.cpp magnet ;

alias opencl-test : scan_test radixsort_test bitonicsort_test heapsort_test ;

#####################THREAD
unit-test threadpool_test : tests/threadpool_test.cpp magnet 
	  		  : <threading>multi ;

alias thread-test : threadpool_test ;


##################################################
alias test : opencl-test thread-test ;
